        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	const attGr = new GlideRecordSecure('sys_attachment');
	attGr.addQuery('table_name', current.getTableName());
	attGr.addQuery('table_sys_id', current.getUniqueValue());
	attGr.addQuery('content_type', 'application/xml');
	attGr.query();

	const gsa = new GlideSysAttachment();
	const updateSets = [];
	while (attGr.next()) {
		const attSysID = attGr.getUniqueValue();
		const xml = new XMLDocument2(gsa.getContentStream(attSysID));

		updateSets.push({
			name: attGr.getValue('file_name'),
			attachment_sys_id: attSysID,
			update_set_sys_id: xml.getNodeText('/unload/sys_remote_update_set/sys_id'),
			update_set_name: xml.getNodeText('/unload/sys_remote_update_set/name')
		});
	}

	g_scratchpad.mplc_data = {
		update_sets: updateSets
	};

})(current, previous);]]></script>
