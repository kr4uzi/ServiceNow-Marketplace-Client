        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// refresh the OAuth Token 5 minutes before its expiry

	const refreshDate = new GlideDateTime();
	refreshDate.addSeconds(+current.order);
	refreshDate.addSeconds(-5 * 60);

	// Only the last update should cause a token refresh
	gs.eventQueueScheduled('x_376096_mplc.oauth_token_refresh', current, JSON.stringify({
		update: current.sys_mod_count.toString()
	}), '', refreshDate);

})(current, previous);]]></script>
